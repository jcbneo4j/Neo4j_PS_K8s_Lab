apiVersion: k3d.io/v1alpha2
kind: Simple
name: neo4jcluster
servers: 1
kubeAPI:
  hostIP: "0.0.0.0"
  hostPort: "6443"
ports:
  - port: 7474:7474
    nodeFilters:
      - server[0]
  - port: 7473:7473
    nodeFilters:
      - server[0]
  - port: 7687:7687
    nodeFilters:
      - server[0]
options:
  k3d:
    wait: true
    timeout: "60s"
  k3s:
    extraServerArgs:
      - --tls-san=127.0.0.1
    extraAgentArgs: []
  kubeconfig:
    updateDefaultKubeconfig: true
    switchCurrentContext: true
